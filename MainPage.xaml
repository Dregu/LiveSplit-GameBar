<Page
	x:Class="LiveSplit.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:LiveSplit"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementBrush}"
    Name="Page_Main">

    <StackPanel Orientation="Vertical" 
				HorizontalAlignment="Left"
				VerticalAlignment="Center" Height="42" Background="Transparent">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
            <TextBlock
				Margin="8,-2,0,0"
				Text="00:00:00" 
				TextWrapping="Wrap" 
				VerticalAlignment="Top"
				FontSize="36"
                FontFamily="Calibri"
                FontWeight="Bold"
				x:Name="MainText" Height="40">
            </TextBlock>
            <TextBlock
				Margin="0,13,0,0" 
				Text=".00" 
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				FontSize="20"
                FontFamily="Calibri"
                FontWeight="Bold"
				x:Name="MilliText" Height="24" />
        </StackPanel>
    </StackPanel>
</Page>
